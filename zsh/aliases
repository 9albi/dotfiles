# vim: filetype=zsh

alias reload="source ~/.zshrc"

alias dir='dir --color=auto'
alias vdir='vdir --color=auto'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'


# eza aliases
alias ll='eza --all --icons=auto --group --header --group-directories-first --long --git'
alias lg='ll --git-ignore'
alias le='eza --group --icons=auto --header --group-directories-first --long --extended'
alias lc='eza --group --icons=auto --header --group-directories-first --across'
alias lo='eza --group --icons=auto --header --group-directories-first --oneline'

alias tree='eza -T --git-ignore'

alias mkdir="mkdir -p"

# Easier navigation
alias cd='z'
alias ..= "cd .."
alias -- -="cd -"

alias c='clear'

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

alias cat="batcat --paging=never"

alias k="kubectl"

note() {
    if [[ ! -z $@ ]]; then 
      echo "date: $(date)" >> $HOME/drafts.txt
      echo "$@" >> $HOME/drafts.txt
      echo "" >> $HOME/drafts.txt
    fi
}


# Include custom aliases
if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi
